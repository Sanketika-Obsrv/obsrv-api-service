                "additionalProperties": false
              },
              "mode": {
                "type": "string",
                "enum": [
                  "Strict",
                  "Lenient"
                ]
              }
            },
            "additionalProperties": false,
            "required": ["field_key", "transformation_function", "mode"]
          }
