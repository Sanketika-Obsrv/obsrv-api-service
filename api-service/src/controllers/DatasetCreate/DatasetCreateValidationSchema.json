        "dataset_config": {
          "type": "object",
          "properties": {
            "file_upload_path": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            "dataset_tz": {
              "type": "string"
            },
            "indexing_config": {
              "type": "object",
