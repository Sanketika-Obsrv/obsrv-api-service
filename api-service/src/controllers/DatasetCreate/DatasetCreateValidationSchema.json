                  "denorm_key": {
                    "type": "string",
                    "minLength": 1
                  },
                  "denorm_out_field": {
                    "type": "string",
                    "minLength": 1
                  },
                  "jsonata_expr": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "oneOf": [
                  {
                    "required": ["dataset_id", "denorm_out_field", "denorm_key"]
