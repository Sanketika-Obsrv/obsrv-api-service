                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "minLength": 1
                      },
                      "expr": {
                        "type": "string",
                        "minLength": 1
                      }
                    },
                    "required": ["type", "expr"],
                    "additionalProperties": false
                  },
                  "datatype": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string",
                    "enum": ["pii", "transform", "derived"]
